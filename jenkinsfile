pipeline {
  agent any
  environment {
      PATH = "$PATH:/usr/local/bin"
  }
  tools {
    maven "maven384"
    jdk "jdk17"
  }
  stages {
    stage('Initialize'){
      steps{
        deleteDir()
        checkout scm
        echo "PATH = ${M2_HOME}/bin:${PATH}"
        echo "M2_HOME = /opt/maven"
      }
    }
    stage('Build') {
      steps {
        sh 'mvn clean verify sonar:sonar -Dsonar.projectKey=goSecuri -Dsonar.sources=. -Dsonar.tests.inclusions=src/test/**/* -Dsonar.exclusions=**/test/**/* -Dsonar.host.url=http://localhost:9000 -Dsonar.login=cc9cf8a781d6fcf1c3eaadeb3db587d9680ab585'
      }
    }
    stage('Deploy') {
        when {
          expression {
            currentBuild.result == null || currentBuild.result == 'SUCCESS'
          }
        }
        steps {
            echo "PATH is: $PATH"
            sh 'cd docker-nginx'
            sh 'docker compose up --build -d'
        }
    }
  }
}
