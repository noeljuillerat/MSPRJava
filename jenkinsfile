pipeline {
  agent any
  environment {
    DATE = new Date().format('yy.M')
    TAG = "${DATE}.${BUILD_NUMBER}"
  }
  tools {
    maven "maven384"
    jdk "jdk11"
  }
  stages {
    stage('Initialize'){
      steps{
        deleteDir()
        checkout scm
        echo "PATH = ${M2_HOME}/bin:${PATH}"
        echo "M2_HOME = /opt/maven"
      }
    }
    stage('Build') {
      steps {
        sh 'mvn clean package'
        script {
            docker.build("docker-nginx/gosecuri-docker:${TAG}")
        }
      }
    }
    stage('Deploy') {
        when {
          expression {
            currentBuild.result == null || currentBuild.result == 'SUCCESS'
          }
        }
        steps {
            sh "docker stop gosecuri-docker | true"
            sh "docker rm gosecuri-docker | true"
            sh 'cd docker-nginx'
            sh '/usr/local/bin/docker-compose up --build -d'
        }
    }
  }
}
