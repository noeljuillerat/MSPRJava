pipeline {
  agent any
  tools {
    maven "maven384"
    jdk "jdk11"
  }
  stages {
    stage('Initialize'){
      steps{
        //echo "PATH = ${M2_HOME}/bin:${PATH}"
        echo "M2_HOME = /opt/maven"
      }
    }
    stage('Test') {
      steps {
        sh 'mvn test'
      }
    }
    stage('Build') {
      steps {
        sh 'mvn package'
      }
    }
    stage('SonarQube Analysis') {
      steps {
        sh 'mvn clean verify sonar:sonar \
              -Dsonar.projectKey=goSecuri \
              -Dsonar.host.url=http://localhost:9000 \
              -Dsonar.login=cc9cf8a781d6fcf1c3eaadeb3db587d9680ab585'
      }
    }
  }
  post {
    success {

      junit '**/target/*-reports/*.xml'
    }
    always {
      junit(
        allowEmptyResults: true,
        testResults: **/target/surefire-reports/.xml
      )
    }
  }
}
